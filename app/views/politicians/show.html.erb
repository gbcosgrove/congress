<div class="row">
<% m = Madison.new %>
<div id="name-container">
  <strong><%= @politician.title %>. <%= @politician.firstname %> <%= @politician.last_name %></strong>-<%= m.get_name(@politician.state) %>: <%= @politician.district %> (<%= @politician.party %>)
</div>
</div>




<p id="notice"><%= notice %></p>
<ul class="tabs" data-tab>
      <li class="tab-title active"><a href="#panel2-1" id="top-industries-button">Top Industries</a></li>
      <li class="tab-title" id="top-donor-button"><a href="#panel2-2">Top Organizations</a></li>
      <li class="tab-title"><a href="#panel2-3">Bio</a></li>
      <li class="tab-title" id="history-button"><a href="#panel2-4">History</a></li>
</ul>




  <div class="large-2 columns">
      <p id='congress-name'>
      <% m = Madison.new %>
      <strong><%= @politician.title %>. <%= @politician.firstname %> <%= @politician.last_name %></strong>
      </p>
      <div id='bio-photo'>
        <img src='https://s3.amazonaws.com/congress-media/bio-pictures/100x125/<%= @politician.bioguide_id %>.jpg' />
      </div>

      <div class="content-box">
          <strong>Party:</strong>
          <%= party_abbrev(@politician.party) %>
          <br>
          <strong>State:</strong>
          <%= m.get_name(@politician.state) %>
          <br>
          <strong>District:</strong>
          <%= @politician.district %>
          <br>
          <strong>Birthdate:</strong>
          <%= @politician.birthdate.to_date.to_formatted_s(:long_ordinal) %>
          <br>
      </div>
      <div>

    </div>
  </div>





  <div id="donors">


     <!--  tab 1 -->
      <div class="tabs-content active">
        <div class="content active" id="panel2-1">
          <div class="large-5 columns content-box">
            <table class="formatted-data-table ">
              <h3>Top Donor Categories</h3>
              <thead class="t-head">
                <tr>
                  <th>Category</th>
                  <th>Count</th>
                  <th>Amount</th>
                </tr>
              </thead>
                <tbody>
                    <% data = donor_industries_chart(name: "#{@politician.firstname} #{@politician.last_name}", cycle: "2012") %>
                    <% chart = data.to_json.html_safe %>
                    <% name = "#{@politician.firstname} #{@politician.last_name}" %>
                    <% industries = top_industries(name: name, cycle:"2012") %>
                    <% industries.each do |industry| %>
                    <tr>
                      <td><%= industry["name"].downcase.capitalize %></td>
                      <td><%= industry["count"] %></td>
                      <td>$<%= industry["amount"] %></td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
          </div>
          <div id="industry-chart" class="large-5 columns content-box"></div>
        </div>






      <!-- tab 2 -->
        <div class="content" id="panel2-2">
          <div class="large-5 columns content-box">
           <table class="formatted-data-table">
              <h3>Top Donor Organizations</h3>
              <thead class="t-head">
                <tr>
                  <th>Category</th>
                  <th>Count</th>
                  <th>Total</th>
                  <th>Employees</th>
                  <th>Direct</th>
                </tr>
              </thead>
                <tbody>
                    <% first = @politician.firstname %>
                    <% last = @politician.last_name %>
                    <% contributors = top_contributors(name: name, cycle: "2012") %>
                    <% contributors.each do |contributor| %>
                    <tr>
                      <td><%= contributor["name"] %></td>
                      <td><%= contributor["total_count"] %></td>
                      <td>$<%= contributor["total_amount"] %></td>
                      <td>$<%= contributor["employee_amount"] %></td>
                      <td>$<%= contributor["direct_amount"] %></td>
                    </tr>
                  <% end %>
                </tbody>

            </table>
          </div>
          <div id="contributors-chart" class="large-5 columns"></div>
        </div>





        <!-- Tab 3 -->
          <div class="content" id="panel2-3">
            <div class="large-5 columns content-box">
            <% entity = Sunlight::Influence::EntitySearch.retrieve_overview(search: name) %>
            <%= entity["metadata"]["bio"].html_safe %>
          </div>
        </div>





        <!-- Tab 4 -->
        <div class="content" id="panel2-4">
          <div id="history" class="large-10 columns"></div>
        </div>
      </div>
  </div>

<div>
  <% data = donor_industries_chart(name: "#{@politician.firstname} #{@politician.last_name}", cycle: "2012") %>
  <% chart = data.to_json.html_safe %>

  <% data = donor_contributors_chart(name: "#{@politician.firstname} #{@politician.last_name}", cycle: "2012") %>
  <% contributors_chart = data.to_json.html_safe %>
  <% pol = collect_totals("#{@politician.firstname} #{@politician.last_name}") %>
  <% money = contribution_overview(pol) %>
  <% numbers = count_overview(pol) %>
  <% years = contribution_amount_key(money).to_json.html_safe %>
  <% dollars = contribution_amount_value(money).to_json.html_safe %>
  <% counts = contribution_count_value(numbers).to_json.html_safe %>
</div>

<script>
function loadTopIndustriesChart() {
  $('#industry-chart').highcharts({
      chart: {
          type: 'pie',
          options3d: {
      enabled: false,
              alpha: 45,
              beta: 0
          }
      },
      title: {
          text: 'Top Donor Industries'
      },
      tooltip: {
          pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
      },
      plotOptions: {
          pie: {
              allowPointSelect: true,
              cursor: 'pointer',
              depth: 35,
              dataLabels: {
                  enabled: false,
                  format: '{point.name}'
              }
          }
      },
      series: [{
          type: 'pie',
          name: 'Browser share',
          data: <%= chart %>,
      }]
  });
}
$(loadTopIndustriesChart);

$('#top-industries-button').on('click', loadTopIndustriesChart);

</script>

<script>

function loadTopDonorsChart() {
$(function () {
    var contribChart = $('#contributors-chart').highcharts({
        chart: {
            type: 'pie',
            options3d: {
              enabled: false,
                alpha: 45,
                beta: 0
            }
        },
        title: {
            text: 'Top Contributors'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                depth: 35,
                dataLabels: {
                    enabled: true,
                    format: '{point.name}'
                }
            }
        },
        series: [{
            type: 'pie',
            name: 'Browser share',
            data: <%= contributors_chart %>,
        }]
    });

    $('.tab').on('click', function() {
      contribChart.APICall();
    })
});
}

$(loadTopDonorsChart);

$('#top-donors-button').on('click', loadTopDonorsChart);

</script>

<script>
function loadHistoryChart() {
$(function () {
        $('#history').highcharts({
            chart: {
                zoomType: 'xy'
            },
            title: {
                text: 'Campaign Contributions'
            },
            subtitle: {
                text: 'Source: Sunlight Foundation'
            },
            xAxis: [{
                categories: <%= years %>
            }],
            yAxis: [{ // Primary yAxis
                labels: {
                    format: '${value}',
                    style: {
                        color: Highcharts.getOptions().colors[1]
                    }
                },
                title: {
                    text: '$USD',
                    style: {
                        color: Highcharts.getOptions().colors[1]
                    }
                }
            }, { // Secondary yAxis
                title: {
                    text: 'Contributions',
                    style: {
                        color: Highcharts.getOptions().colors[0]
                    }
                },
                labels: {
                    format: '{value} Count',
                    style: {
                        color: Highcharts.getOptions().colors[0]
                    }
                },
                opposite: true
            }],
            tooltip: {
                shared: true
            },
            legend: {
                layout: 'vertical',
                align: 'left',
                x: 120,
                verticalAlign: 'top',
                y: 100,
                floating: true,
                backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'
            },
            series: [{
                name: 'Count',
                type: 'column',
                yAxis: 1,
                data: <%= counts %>,
                tooltip: {
                    valueSuffix: 'count'
                }

            }, {
                name: 'Contributions',
                type: 'spline',
                data: <%= dollars %>,
                tooltip: {
                    valueSuffix: '$'
                }
            }]
        });
    });
}

$(loadHistoryChart);
$('#history-button').on('click', loadHistoryChart);

</script>


